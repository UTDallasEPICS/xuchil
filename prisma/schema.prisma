generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int @id @default(autoincrement())
  username     String
  name         String
  passwordHash String
  role         Role
  email        String?
  phoneno      String?
}

enum Role {
  worker
  admin
}

model Product {
  id             Int     @id @default(autoincrement())
  category       String  
  name           String  
  is_end_product Boolean
}
