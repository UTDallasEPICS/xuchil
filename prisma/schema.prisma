// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Task {
  id              Int       @id @default(autoincrement())
  activity        String
  input_weight    Float?
  output_weight   Float?
  loss_weight     Float?
  status          String    // "progressing", "paused", or "done"
  start_timestamp DateTime  @default(now())
  end_timestamp   DateTime?
  notes           String?
  
  worker_id       Int
  worker          User      @relation(fields: [worker_id], references: [id])
  
  product_id      Int
  product         Product   @relation(fields: [product_id], references: [id])
}