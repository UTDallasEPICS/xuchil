generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String
  name String
  passwordHash String
  role Role
  email String?
  phoneno String?
}

enum Role {
  WORKER
  ADMIN
}