// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  username String
  name String
  passwordHash String
  role Role
  email String?
  phoneno String?
}

enum Role {
  WORKER
  ADMIN
}

model Inventory {
  id          Int          @id @default(autoincrement())
  quantity    Int
  threshold   Int
  product     Product      @relation(fields: [id], references: [id])
}

model Product {
  id           Int     @id @default(autoincrement())
  category     String
  name         String
  isEndProduct Boolean
  imageSrc     String
  inventory    Inventory?  @relation

  ProcessStep ProcessStep[]
}

model ProcessStep {
  id            Int     @id @default(autoincrement())
  productId     Int
  product       Product @relation(fields: [productId], references: [id])
  title         String
  description   String
  estimatedTime Int
  hasInput      Boolean
  unit          String
}
